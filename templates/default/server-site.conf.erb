server {
       listen <%= @server_port %>;
       server_name <%= @server_hostname %>;

       root <%= @server_root %>;
       index index.html;

       location / {
               try_files $uri $uri/ =404;
       }
       <%= "if ($http_x_forwarded_proto = \"http\") { return 301 https://$server_name$request_uri; }" if @https_enabled %>
}